<h1>Listing journals</h1>

<table>
  <tr>
    <th>Type</th>
    <th>Number</th>
    <th>Journal date</th>
  </tr>

<% for journal in @journals %>
  <tr>
    <td><%=h journal.type %></td>
    <td><%=h journal.number %></td>
    <td><%=h journal.journal_date %></td>
    <td><%= link_to 'Show', journal %></td>
    <td><%= link_to 'Edit', edit_journal_path(journal) %></td>
    <td><%= link_to 'Destroy', journal, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New journal', new_journal_path %>
