<h1>Listing logs</h1>

<%= will_paginate @admin_logs %>

<table>
  <tr>
    <th>Table name</th>
    <th>User</th>
    <th>Created at</th>
    <th>Changes</th>
  </tr>

<% @admin_logs.each do |log| %>
  <tr>
    <td><%= log.table_name %></td>
    <td><%= log.admin %></td>
    <td><%= log.created_at %></td>
    <td>
      <table>
	<tr>
	  <th><%= t('logs.field') %></th>
	  <th><%= t('logs.before') %></th>
	  <th><%= t('logs.after') %></th>
	</tr>
	<% log.changes.each do |change| %>
	<tr>
	  <td><%= change[:field] %></td>
	  <td><%= change[:before] || t('logs.unset') %></td>
	  <td><%= change[:after] || t('logs.unset') %></td>
	</tr>
	<% end %>
      </table>
    </td>
  </tr>
  <% end %>
</table>

<br />

