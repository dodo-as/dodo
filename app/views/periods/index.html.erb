<h1>Listing periods</h1>

<table>
  <tr>
    <th>Year</th>
    <th>Nr</th>
    <th>Status</th>
    <th>Company</th>
  </tr>

<% @periods.each do |period| %>
  <tr>
    <td><%=h period.year %></td>
    <td><%=h period.nr %></td>
    <td><%=h period.status_name %></td>
    <td><%=h period.company_id %></td>
    <td>
      <%= link_to 'Show', period %>
      <%= link_to 'Edit', edit_period_path(period) %>
      <%= link_to 'Destroy', period, :confirm => 'Are you sure?', :method => :delete %>
    </td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New period', new_period_path %>