<%= form_for(@unit) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :name, t('units.name') %><br />
    <%= f.text_field :name %>
  </p>

  <%= render :partial => "/addresses/nested_form", :locals => {  :parent => f, :field_name => :address } %>
  <p>
    <%= f.label :from %><br />
    <%= f.text_field :from, :class=> :datepicker %>
  </p>

  <p>
    <%= f.label :to %><br />
    <%= f.text_field :to, :class=> :datepicker %>
  </p>

  <p>
    <%= f.label :comments %><br />
    <%= f.text_area :comments %>
  </p>
  <p>
    <%= f.submit t('global.save') %>
  </p>
<% end %>
