<h1><%= t('untis.header_edit')%></h1>

<%= form_for(@unit) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <%= render :partial => "/addresses/nested_form", :locals => {  :parent => f, :field_name => :address } %>
  <p>
    <%= f.label :comments %><br />
    <%= f.text_area :comments %>
  </p>
  <p>
    <%= f.submit t('global.update') %>
  </p>
<% end %>

<%= link_to t('global.show'), @unit %> |
<%= link_to t('global.back'), units_path %>
