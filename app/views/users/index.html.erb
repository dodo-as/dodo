<h1>Listing users</h1>

<table class='striped'>
  <tr>
    <th>Number</th>
    <th>Name</th>
    <th>Companies</th>
    <th></th>
  </tr>

  
  <% for user in @users %>
  <tr>
    <td><%=h user.login %></td>
    <td><%=h user.email %></td>
    <td>
      <%= user.companies.collect{|c| link_to c.name, c}.join(", ") %>
    </td>
    <td>
      <%= link_to 'Show', user %>
      <%= link_to 'Edit', edit_user_path(user) %>
      <%= link_to 'Destroy', user, :confirm => 'Are you sure?', :method => :delete %>
    </td>
  </tr>
  <% end %>
</table>

<br />

<%= link_to 'New user', new_user_path %>
