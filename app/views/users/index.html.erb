<h1>Listing users</h1>

<table class='striped'>
  <tr>
    <th>Number</th>
    <th>Name</th>
    <th></th>
  </tr>

  <%= session[:user].login %>
  
  <% for user in @users %>
  <tr>
    <td><%=h user.login %></td>
    <td><%=h user.email %></td>
    <td>
      <%= link_to 'Show', user %>
      <%= link_to 'Edit', edit_user_path(user) %>
      <%= link_to 'Destroy', user, :confirm => 'Are you sure?', :method => :delete %>
    </td>
  </tr>
  <% end %>
</table>

<br />

<%= link_to 'New user', new_user_path %>
