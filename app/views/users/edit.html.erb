<h1>Editing user <%=h @user.login%></h1>

<% form_for(@user) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :login %><br />
    <%= f.text_field :login %>
  </p>
  <p>
    <%= f.label :company_ids %><br />
    <%= f.select :company_ids, Company.find(:all).collect {|p| [ p.name, p.id ] }, {}, {:multiple => true, :size => 15} %>
  </p>
  <p>
    <%= f.label :email %><br />
    <%= f.text_field :email %>
  </p>
  <p>
    <%= f.submit "Update" %>
  </p>
<% end %>

<%= link_to 'Show', @user %> |
<%= link_to 'Back', users_path %>

