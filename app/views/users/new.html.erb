<h1><%= t(:new_user, :scope => :users) -%></h1>
<%= form_for([ @user]) do |f| %>

<%= f.error_messages %><br/>

<%= f.label :email %><br/>
<%= f.text_field :email %><br/>

<%= f.label :password %><br/>
<%= f.password_field :password %><br/>

<%= f.label :password_confirmation %><br/>
<%= f.password_field :password_confirmation %><br/>

<%= f.submit t(:signup, :scope => :users) %>

<% end %>

<p>
<%= link_to t(:back, :scope => :users), users_path %>
</p>

