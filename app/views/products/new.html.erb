<h1><%= t(:new_product, :scope => :products) -%></h2>

<% form_for(@product) do |f| %>
  <%= f.error_messages %>

  <p>
  <%= f.label :price, t(:price, :scope => :products) %><br />
    <%= f.text_field :price %>
  </p>
  <p>
    <%= f.label :name, t(:name, :scope => :products) %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.submit t(:create, :scope => :products) %>
  </p>
<% end %>

<%= link_to t(:back, :scope => :products), products_path %>
