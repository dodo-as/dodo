<h1><%= t(:listing_products, :scope => :products) -%></h1>

<table>
  <tr>
    <th><%= t(:price, :scope => :products) -%></th>
    <th><%= t(:name, :scope => :products) -%></th>
    <th></th>
  </tr>
  
  <% for product in @products %>
  <tr>
    <td><%=h product.price -%></td>
    <td><%=h product.name %></td>
    <td>

      <%= link_to t(:show, :scope => :products), product %>
      <%= link_to t(:edit, :scope => :products), edit_product_path(product) %>
      <%= link_to t(:destroy, :scope => :products), product, :confirm => t(:destroy_confirmation, :scope => :products, :name => product.name), :method => :delete %>
    </td>
  </tr>
  <% end %>
</table>

<br />

<%= link_to t(:new_product, :scope => :products), new_product_path %>
