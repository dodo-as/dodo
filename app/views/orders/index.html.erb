<h1>Listing orders</h1>

<table>
  <tr>
    <th>Price</th>
    <th>Mva</th>
    <th>Order date</th>
    <th>Requested delivery date</th>
    <th>Seller</th>
    <th>Customer</th>
    <th>Delivery address</th>
    <th>Transport</th>
    <th></th>
  </tr>

<% for order in @orders %>
  <tr>
    <td><%=h order.price %></td>
    <td><%=h order.mva %></td>
    <td><%=h order.order_date %></td>
    <td><%=h order.requested_delivery_date %></td>
    <td><%=h order.seller.name %></td>
    <td><%=h order.customer.name %></td>
    <td><%= render :partial => "addresses/show", :locals => { :address => order.delivery_address } %></td>
    <td><%=h order.transport.name %></td>

    <td>
      <%= link_to 'Show', order %>
      <%= link_to 'Edit', edit_order_path(order) %>
      <%= link_to 'Destroy', order, :confirm => 'Are you sure?', :method => :delete %>
    </td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New order', new_order_path %>
