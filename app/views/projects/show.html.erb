<p>
  <b><%= t('global.name') %>:</b>
  <%= @project.name %>
</p>

<p>
  <b><%= t('address.address') %>:</b>
  <%= render :partial => "/addresses/show", :locals => { :address => @project.address }  %>
</p>

<p>
  <b><%= t('global.valid_for') %>:</b>
  <%= @project.from || t('global.unknown_date') %> - <%= @project.to || t('global.unknown_date') %>
</p>

<p>
  <b><%= t('global.comments') %>:</b>
  <%= @project.comments %>
</p>

<% if permitted_to? :edit, @project %>
  <%= link_to t('global.edit'), edit_project_path(@project) %> |
<% end %>
<%= link_to t('global.back'), projects_path %>
