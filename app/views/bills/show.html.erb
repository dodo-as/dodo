<% if @bill.invoice_number %>
<p>
  <b><%= t(:invoice_number, :scope => :bills, :number => @bill.invoice_number) -%></b>
</p>
<% end %>

<p>
  <b><%= t(:delivery_date, :scope => :bills) -%>:</b>
  <%=h l(@bill.delivery_date) %>
</p>

<p>
  <b><%= t(:billing_date, :scope => :bills) -%>:</b>
  <%=h l(@bill.billing_date) %>
</p>


<%= link_to t(:edit, :scope => :bills), edit_bill_path(@bill) %> |
<%= link_to "View journal entry", @bill.journal %> |
<%= link_to t(:back, :scope => :bills), bills_path %>
