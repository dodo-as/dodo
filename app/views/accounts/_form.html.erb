<% form_for(@account) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :number %><br />
    <%= f.text_field :number %>
  </p>
  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :lodo_name %><br />
    <%= f.text_field :lodo_name %>
  </p>
  <p>
    <%= f.label :debit_text %><br />
    <%= f.text_field :debit_text %>
  </p>
  <p>
    <%= f.label :credit_text %><br />
    <%= f.text_field :credit_text %>
  </p>
  <p>
    <%= f.label :comments %><br />
    <%= f.text_field :comments %>
  </p>
  <p>
    <%= f.check_box :has_ledger %>
    <%= f.label :has_ledger %>
  </p>

  <%= render :partial => "active_periods/form", :locals => { :active_periods => @account.activatable } %>

  <p>
    <%= f.submit "Save" %>
  </p>
<% end %>


